<style type="text/css">

    .author {
        margin-top: 50px;
    }

    .author h4 {
        font-size: 1.8rem;
        margin: 0;
    }

    .author p {
        margin: 1rem 0;
        font-size: 1.4rem;
        line-height: 1.75em;
    }

</style>

{{#post}}
<div class="card author">
    <div class="card-content">
        {{#author}}

            {{#if profile_image}}
                <figure class="author-image">
                    <a class="img" href="{{url}}" style="background-image: url({{profile_image}})"><span class="hidden">{{name}}的头像</span></a>
                </figure>
            {{/if}}

            <section class="author">
                <h4>
                    <a href="{{url}}">{{name}}</a>
                </h4>

                {{#if bio}}
                    <p>{{bio}}</p>
                {{else}}
                    <p>继续阅读此作者的<a href="{{url}}">更多文章</a>。</p>
                {{/if}}
                <div class="author-meta">
                    {{#if location}}<i class="fa fa-map-marker">&nbsp;{{location}}&nbsp;</i>{{/if}}
                    {{#if website}}<i class="fa fa-home"><a href="{{website}}">&nbsp;{{website}}&nbsp;</a></i>{{/if}}
                    <!--{{#if email}}<i class="fa fa-envelope">{{email}}</i>{{/if}}-->
                </div>


            </section>

        {{/author}}
    </div>
</div>
{{/post}}